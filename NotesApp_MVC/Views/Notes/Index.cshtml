@model IEnumerable<NotesApp_MVC.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-center align-items-center" style="width: 150px; height: 200px; background-color: lightgray; font-size: 100px;">
    <a class="text-decoration-none text-black" asp-action="Create">+</a>
</div>
<span class="fw-bold">Add New</span>
<hr/>
@if(Model == null || !Model.Any())
{
    <h4 class="text-center">No added notes, Add some.</h4>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-2 mx-1">
                <div class="d-flex justify-content-center align-items-center" style="width: 150px; height: 200px; background-color: lightblue; font-size: 100px;">
                    <a class="text-decoration-none text-black" asp-action="Edit" asp-route-id="@item.Id">📄</a>
                </div>
                <span class="fw-bold">@item.Title</span>
            </div>
        }
    </div>
}
